extends layout
block content
    h1= title
    p Welcome to  #{title}
    form(name="search", action="/foursquare",method="GET")
        p
            | Search by Username
            = " "
            input(type="text",name="name")
        p
            | How many days?
            = " "
            input(type="text",name="day")
        input(type="submit",value="submit")
    br

    if venues
        table(style="width:100%",border=1)
            tr
                td
                td name
                td categories
                td address
            for venue in venues
                tr
                    td
                        img(src=venue.photo,style="width:100px;height:100px")
                    td
                        a(href=venue.url)
                            = venue.name
                    td= venue.categories
                    td= venue.address



