extends layout

block content
    h1= title
    p Welcome to #{title}
    form(name="search", action="/",method="GET", onsubmit="return validateForm();")
        p search :
            = " "
            input(type="text",name="query",required)
            input(type="submit",value="submit")
        p want to add location?
            input(type="checkbox",id="check", onclick="addText()",required)
        input(type="hidden",name="geoloc",id="geoloc",disabled="true")
        p
        br
        br

    if tweets
        if tweets.length == 0
            h2 No result found
        else
            ol
                for tweet in tweets
                    div(style="display: block")
                        p
                            img(src=tweet.user.profile_image_url)
                            =tweet.created_at
                            br
                            =tweet.text


    script(type='text/javascript').
        function addText() {
            var inputField = document.getElementById("geoloc");
            var check = document.getElementById("check");
            console.log("clicked");
            if (check.checked) {
                inputField.setAttribute("type", "text");
                inputField.removeAttribute("disabled");
            } else {
                inputField.setAttribute("type", "hidden");
                inputField.setAttribute("disabled", "true");
            }

        }
        function validateForm() {
            var x = document.forms["search"][query];
            if (x == null || x == "") {
                alert("invalid input value");
                return false;
            }
            return false;
        }